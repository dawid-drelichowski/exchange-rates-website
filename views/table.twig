<table class="table table-condensed table-hover">
    <thead>
        <tr>
            <th>Kraj</th>
            <th>Waluta</th>
            <th>Kupno</th>
            <th>Tendencja kupna</th>
            <th>Sprzedaż</th>
            <th>Tendencja sprzedaży</th>
        </tr>
    </thead>
    <tbody>
    {% for row in data %}
        <tr>
            <td>{{ row.country }}</td>
            <td>{{ row.currency }}</td>
            <td>{{ row.purchase|number_format(4) }}</td>
            <td>{{ row.purchaseTendency }}</td>
            <td>{{ row.sale|number_format(4) }}</td>
            <td>{{ row.saleTendency }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>